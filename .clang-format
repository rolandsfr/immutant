BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Always

PointerAlignment: Left
ReferenceAlignment: Left

IncludeBlocks: Regroup      # Preserve | Merge | Regroup
SortIncludes: true 
IncludeCategories:
  # 1. System headers: <stdio.h>, <stdlib.h>, <foo/bar.h>
  - Regex: '^<.*>$'
    Priority: 1

  # 2. Unity special case
  - Regex: '^"unity\.h"$'
    Priority: 2

  # 3. Local headers with NO path: "foo.h", "bar.h"
  #    (new, stricter version)
  - Regex: '^"[^"/]+\.h"$'
    Priority: 3

  # 4. Parent directory includes "../foo/bar.h"
  - Regex: '^"\.\./.*"$'
    Priority: 4

  # 5. Same-folder-relative includes "./foo/bar.h"
  - Regex: '^"\./.*"$'
    Priority: 5

  # 6. Fallback
  - Regex: '.*'
    Priority: 100

BreakBeforeBraces: Linux
IndentCaseLabels: true
