BasedOnStyle: LLVM
IndentWidth: 4
TabWidth: 4
UseTab: Always

PointerAlignment: Left
ReferenceAlignment: Left

IncludeBlocks: Regroup      # Preserve | Merge | Regroup
IncludeCategories:
  # 1. System headers
  - Regex: '^<.*>$'
    Priority: 1

  # 2. Unity
  - Regex: '^"unity\.h"$'
    Priority: 2

  # 3. Mocks â€” MUST COME BEFORE generic local headers
  - Regex: '^"Mock.*\.h"$'
    Priority: 10   # higher = later in output

  # 4. Local headers
  - Regex: '^"[^"/]+\.h"$'
    Priority: 3

  # 5. Parent dir
  - Regex: '^"\.\./.*"$'
    Priority: 4

  # 6. Same folder
  - Regex: '^"\./.*"$'
    Priority: 5

  # 7. Fallback
  - Regex: '.*'
    Priority: 100

BreakBeforeBraces: Linux
IndentCaseLabels: true
